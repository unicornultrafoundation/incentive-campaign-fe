{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["next", "eslint:recommended", "prettier"],
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "import",
    "jsx-a11y",
    "unused-imports"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false
      }
    ],
    "react/display-name": 0,
    "react/react-in-jsx-scope": 0,
    "react/self-closing-comp": "error",
    "react-hooks/exhaustive-deps": "off",
    "no-use-before-define": 0,
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "import/order": [
      2,
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ]
  }
}
